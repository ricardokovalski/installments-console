{
  "name": "ricardokovalski/installments-console",
  "description": "A console application for calculate installments with ricardokovalski/installments-calculator. ",
  "type": "project",
  "authors": [
    {
      "name": "Ricardo Kovalski Cruz",
      "email": "ricardokovalskicruz@gmail.com",
      "role": "Maintainer"
    }
  ],
  "license": "MIT",
  "keywords": ["console", "installments"],
  "homepage": "https://github.com/ricardokovalski/installments-console",
  "require": {
    "php": ">=5.6",
    "ext-json": "*",
    "ricardokovalski/installments-calculator": "v1.0.1-alpha",
    "symfony/console": "^3.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.7",
    "friendsofphp/php-cs-fixer": "^2.19"
  },
  "scripts": {
    "check-style": "php-cs-fixer fix --diff --verbose --dry-run .",
    "fix-style": "php-cs-fixer fix ."
  },
  "autoload": {
    "psr-4": {
      "RicardoKovalski\\Installments\\Console\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "RicardoKovalski\\Installments\\Console\\Tests\\": "tests/"
    }
  },
  "bin": ["bin/installments"],
  "minimum-stability": "dev",
  "prefer-stable": true
}
